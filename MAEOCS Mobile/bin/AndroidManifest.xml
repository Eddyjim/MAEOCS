<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.eci.maeocs"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="10" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MAEOCSTheme" >
        <activity
            android:name="edu.eci.maeocs.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.eci.maeocs.HelpWindow"
            android:label="@string/title_activity_help_window" >
        </activity>
        <activity
            android:name="edu.eci.maeocs.MapConsultingWindow"
            android:label="@string/title_activity_map_consulting_window" >
        </activity>
        <activity
            android:name="edu.eci.maeocs.MapWindow"
            android:label="@string/title_activity_map_window" >
        </activity>
        <activity
            android:name="edu.eci.maeocs.GPSMapWindow"
            android:label="@string/title_activity_gpsmap_window" >
        </activity>
        <activity
            android:name="edu.eci.maeocs.MapSelectorWindow"
            android:label="@string/title_activity_map_selector_window" >
        </activity>
        <activity
            android:name="edu.eci.maeocs.SDMapWindow"
            android:label="@string/title_activity_bluetooth_map_window" >
        </activity>
    </application>

</manifest>